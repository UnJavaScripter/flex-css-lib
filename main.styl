/*
| Flex
|
*/

[flex]
  flex 1
  box-sizing border-box



  
[flex="grow"]
  flex: 1 1 100%

[flex="initial"]
  -webkit-flex 0 1 auto

[flex="auto"]
  -webkit-flex 1 1 auto

[flex="none"]
  flex 0 0 auto
  
[flex="noshrink"]
  flex 1 0 auto

[flex="nogrow"]
  flex 0 1 auto

[flex="0"]
  flex 1 1 0%


// Mixin
_flex(percentage)

  [layout="column"]
    &>{"[flex='"}{percentage}{"']"}
      flex 1 1 0%
      max-width 100%
      min-width 0
      if(percentage % 5 != 0)
        max-height percentage+(percentage/100) + "%"
      else
        max-height percentage + "%"
        
  [layout="row"]
    &>{"[flex='"}{percentage}{"']"}
      flex 1 1 0%
      max-height 100%
      min-width 0
      if(percentage % 5 != 0)
        max-width percentage+(percentage/100) + "%"
      else
        max-width percentage + "%"
  
  flex_properties =
    max-height 100%
    box-sizing border-box
    if(percentage % 5 != 0)
      flex 1 1 percentage+(percentage/100) + "%"
      max-width percentage+(percentage/100) + "%"
    else
      flex 1 1 percentage + "%"
      max-width percentage + "%"

  {"[flex='"}{percentage}{"']"}
    {flex_properties}

  @media screen and (max-width MEDIA_XS_TOP)
    {"[flex-xs='"}{percentage}{"']"}
      {flex_properties}

  @media (min-width MEDIA_SM) and (max-width MEDIA_SM_TOP)
    {"[flex-sm='"}{percentage}{"']"}
      {flex_properties}

  @media (min-width MEDIA_MD) and (max-width MEDIA_MD_TOP)
    {"[flex-md='"}{percentage}{"']"}
      {flex_properties}

  @media (min-width MEDIA_LG) and (max-width MEDIA_LG_TOP)
    {"[flex-lg='"}{percentage}{"']"}
      {flex_properties}


    
