|
*/


// Base

_layoutAlign(x = start center end space-around space-between, y = start center end stretch, size = xs sm md lg)

  layourAlign_properties =
    if x == start
      justify-content flex-start      
    if x == center
      justify-content center          
    if x == end
      justify-content flex-end        
    if x == space-around
      justify-content space-around    
    if x == space-between
      justify-content space-between   
  
    if y == start
      align-content flex-start        
      align-items flex-start          
    if y == center
      align-content center            
      align-items center              
    if y == end
      align-content flex-end          
      align-items flex-end            
    if y == stretch
      align-content stretch           
      align-items stretch


  {"[layout-align='"}{x}{" "}{y}{"']"}
    max-width 100%
    box-sizing border-box
    {layourAlign_properties}

  @media screen and (max-width MEDIA_XS_TOP)
    {"[layout-align-xs='"}{x}{" "}{y}{"']"}
      max-width 100%
      box-sizing border-box
      {layourAlign_properties}

